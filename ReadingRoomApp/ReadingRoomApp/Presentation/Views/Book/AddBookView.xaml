<UserControl x:Class="ReadingRoomApp.Presentation.Views.Book.AddBookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReadingRoomApp.Presentation.Views.Book"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление новой книги" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Название -->
                <TextBlock Text="Название:" 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <TextBox Text="{Binding NewBook.Title, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="0" 
                         Grid.Column="1" 
                         Margin="0,0,0,15" 
                         Padding="5"/>

                <!-- Автор -->
                <TextBlock Text="Автор:" 
                           Grid.Row="1" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <ComboBox ItemsSource="{Binding Authors}" 
                          SelectedItem="{Binding NewBook.Author}" 
                          DisplayMemberPath="FullName" 
                          Grid.Row="1" 
                          Grid.Column="1" 
                          Margin="0,0,0,15" 
                          Padding="5"/>

                <!-- Жанр -->
                <TextBlock Text="Жанр:" 
                           Grid.Row="2" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <ComboBox ItemsSource="{Binding Genres}" 
                          SelectedItem="{Binding NewBook.Genre}" 
                          DisplayMemberPath="Name" 
                          Grid.Row="2" 
                          Grid.Column="1" 
                          Margin="0,0,0,15" 
                          Padding="5"/>

                <!-- Год издания -->
                <TextBlock Text="Год издания:" 
                           Grid.Row="3" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <TextBox Text="{Binding NewBook.PublicationYear, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="3" 
                         Grid.Column="1" 
                         Margin="0,0,0,15" 
                         Padding="5"/>

                <!-- Доступность -->
                <TextBlock Text="Доступность:" 
                           Grid.Row="4" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <CheckBox IsChecked="{Binding NewBook.IsAvailable}" 
                          Content="Доступна для выдачи" 
                          Grid.Row="4" 
                          Grid.Column="1" 
                          Margin="0,0,0,15" 
                          VerticalAlignment="Center"/>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Отмена" 
                    Command="{Binding CancelCommand}" 
                    Padding="15,10" 
                    Margin="0,0,10,0" 
                    Background="#E0E0E0" 
                    BorderThickness="0"/>
            <Button Content="Сохранить" 
                    Command="{Binding SaveCommand}" 
                    Padding="15,10" 
                    Background="#2196F3" 
                    Foreground="White" 
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>