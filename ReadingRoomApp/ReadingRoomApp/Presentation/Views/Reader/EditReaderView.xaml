<UserControl x:Class="ReadingRoomApp.Presentation.Views.Reader.EditReaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReadingRoomApp.Presentation.Views.Reader"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Редактирование читателя" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Имя -->
                <TextBlock Text="Имя:" 
                           Grid.Row="0" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <TextBox Text="{Binding ReaderToEdit.FirstName, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="0" 
                         Grid.Column="1" 
                         Margin="0,0,0,15" 
                         Padding="5"/>

                <!-- Фамилия -->
                <TextBlock Text="Фамилия:" 
                           Grid.Row="1" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <TextBox Text="{Binding ReaderToEdit.LastName, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="1" 
                         Grid.Column="1" 
                         Margin="0,0,0,15" 
                         Padding="5"/>

                <!-- Email -->
                <TextBlock Text="Email:" 
                           Grid.Row="2" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <TextBox Text="{Binding ReaderToEdit.Email, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="2" 
                         Grid.Column="1" 
                         Margin="0,0,0,15" 
                         Padding="5"/>

                <!-- Телефон -->
                <TextBlock Text="Телефон:" 
                           Grid.Row="3" 
                           Grid.Column="0" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <TextBox Text="{Binding ReaderToEdit.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="3" 
                         Grid.Column="1" 
                         Margin="0,0,0,15" 
                         Padding="5"/>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Отмена" 
                    Command="{Binding CancelCommand}" 
                    Padding="15,10" 
                    Margin="0,0,10,0" 
                    Background="#E0E0E0" 
                    BorderThickness="0"/>
            <Button Content="Сохранить" 
                    Command="{Binding SaveCommand}" 
                    Padding="15,10" 
                    Background="#2196F3" 
                    Foreground="White" 
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>