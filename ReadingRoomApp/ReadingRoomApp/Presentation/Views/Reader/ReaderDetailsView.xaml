<UserControl x:Class="ReadingRoomApp.Presentation.Views.Reader.ReaderDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReadingRoomApp.Presentation.Views.Reader"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Детали читателя" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20" 
                   Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ID -->
            <TextBlock Text="ID:" 
                       Grid.Row="0" 
                       Grid.Column="0" 
                       FontWeight="Bold"
                       VerticalAlignment="Center" 
                       Margin="0,0,10,15"/>
            <TextBlock Text="{Binding Reader.Id}" 
                       Grid.Row="0" 
                       Grid.Column="1" 
                       Margin="0,0,0,15"/>

            <!-- Имя -->
            <TextBlock Text="Имя:" 
                       Grid.Row="1" 
                       Grid.Column="0" 
                       FontWeight="Bold"
                       VerticalAlignment="Center" 
                       Margin="0,0,10,15"/>
            <TextBlock Text="{Binding Reader.FirstName}" 
                       Grid.Row="1" 
                       Grid.Column="1" 
                       Margin="0,0,0,15"/>

            <!-- Фамилия -->
            <TextBlock Text="Фамилия:" 
                       Grid.Row="2" 
                       Grid.Column="0" 
                       FontWeight="Bold"
                       VerticalAlignment="Center" 
                       Margin="0,0,10,15"/>
            <TextBlock Text="{Binding Reader.LastName}" 
                       Grid.Row="2" 
                       Grid.Column="1" 
                       Margin="0,0,0,15"/>

            <!-- Email -->
            <TextBlock Text="Email:" 
                       Grid.Row="3" 
                       Grid.Column="0" 
                       FontWeight="Bold"
                       VerticalAlignment="Center" 
                       Margin="0,0,10,15"/>
            <TextBlock Text="{Binding Reader.Email}" 
                       Grid.Row="3" 
                       Grid.Column="1" 
                       Margin="0,0,0,15"/>

            <!-- Телефон -->
            <TextBlock Text="Телефон:" 
                       Grid.Row="4" 
                       Grid.Column="0" 
                       FontWeight="Bold"
                       VerticalAlignment="Center" 
                       Margin="0,0,10,15"/>
            <TextBlock Text="{Binding Reader.PhoneNumber}" 
                       Grid.Row="4" 
                       Grid.Column="1" 
                       Margin="0,0,0,15"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Взятые книги" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0,10,0,10" 
                       Grid.Row="0"/>

            <DataGrid Grid.Row="1" 
                      ItemsSource="{Binding Reader.BorrowedBooks}" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      BorderThickness="1" 
                      BorderBrush="#DDDDDD">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Автор" Binding="{Binding Author.FullName}" Width="150"/>
                    <DataGridTextColumn Header="Жанр" Binding="{Binding Genre.Name}" Width="120"/>
                    <DataGridTextColumn Header="Год издания" Binding="{Binding PublicationYear}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Закрыть" 
                    Command="{Binding CloseCommand}" 
                    Padding="15,10" 
                    Margin="0,0,10,0" 
                    Background="#E0E0E0" 
                    BorderThickness="0"/>
            <Button Content="Редактировать" 
                    Command="{Binding EditCommand}" 
                    Padding="15,10" 
                    Background="#2196F3" 
                    Foreground="White" 
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>