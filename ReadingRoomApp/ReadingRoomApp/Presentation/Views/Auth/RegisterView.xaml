<UserControl x:Class="ReadingRoomApp.Presentation.Views.Auth.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReadingRoomApp.Presentation.Views.Auth"
             xmlns:viewmodels="clr-namespace:ReadingRoomApp.Presentation.ViewModels.Auth"
             d:DataContext="{d:DesignInstance Type=viewmodels:RegisterViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Border Width="450" 
                Background="White" 
                BorderBrush="#2196F3" 
                BorderThickness="1" 
                CornerRadius="10" 
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Регистрация" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,20"/>

                    <!-- Имя пользователя -->
                    <TextBlock Text="Имя пользователя:"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,5,0,15"/>

                    <!-- Email -->
                    <TextBlock Text="Email:"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,5,0,15"/>

                    <!-- Имя -->
                    <TextBlock Text="Имя:"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,5,0,15"/>

                    <!-- Фамилия -->
                    <TextBlock Text="Фамилия:"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,5,0,15"/>

                    <!-- Пароль -->
                    <TextBlock Text="Пароль:"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Margin="0,5,0,15" 
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <!-- Подтверждение пароля -->
                    <TextBlock Text="Подтвердите пароль:"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" 
                                 Margin="0,5,0,15" 
                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                    <!-- Выбор роли -->
                    <TextBlock Text="Тип пользователя:"/>
                    <ComboBox ItemsSource="{Binding AvailableRoles}" 
                              SelectedItem="{Binding SelectedRole}"
                              Margin="0,5,0,15">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource UserRoleToStringConverter}}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Сообщение об ошибке -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               TextWrapping="Wrap" 
                               Margin="0,0,0,15"/>

                    <!-- Кнопки -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,10,0,0">
                        <Button Content="Отмена" 
                                Command="{Binding CancelCommand}" 
                                Padding="15,10" 
                                Margin="0,0,10,0" 
                                Background="#E0E0E0" 
                                BorderThickness="0"/>
                        <Button Content="Зарегистрироваться" 
                                Command="{Binding RegisterCommand}" 
                                Padding="15,10" 
                                Background="#2196F3" 
                                Foreground="White" 
                                BorderThickness="0"/>
                    </StackPanel>

                    <!-- Ссылка на вход -->
                    <TextBlock Margin="0,20,0,0" 
                               HorizontalAlignment="Center">
                        <Hyperlink Command="{Binding NavigateToLoginCommand}">
                            Уже есть аккаунт? Войти
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>